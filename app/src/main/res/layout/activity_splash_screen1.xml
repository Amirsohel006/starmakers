<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.splashscreen.SplashScreen1"
    android:background="@drawable/backgroundsplash"
    android:orientation="vertical">
<!--    <ImageView-->
<!--       android:layout_centerHorizontal="true"-->
<!--        android:id="@+id/image1"-->
<!--        android:src="@drawable/image1"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="100dp"/>-->




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/placeholder_solid_color" />

    <!-- Center the custom indicator below the ImageView -->
    <include
        layout="@layout/custom_shape_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:elevation="10dp" /> <!-- Adjust the elevation as needed -->



    <ImageView
        android:id="@+id/skipbutton"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/skip"/>
</RelativeLayout>
